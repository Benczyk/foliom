/**
 * Create a navigation menu with big icons.
 * {String} page The name of the page.
 * {Array}  bigButtons Array of String as the icon's name.
 * {String} extension Extensions of icons.
 */
menuBig(page, bigButtons, extension)
  .{page}
    nav
      display flex
      flex-direction row
      justify-content space-between
      a
        size 293px
        padding 10px
        border-radius 2px
        position relative
        z-index 2
        outline none
        text-decoration none
        line-height @width
        span
          size @width
          absolute top left
          text-align center
          opacity 0
          color white
          font-size 2.2em
          line-height @width
          transform opacity defaultAnimation
          outline none
          text-decoration none
        &::after
          content ''
          z-index -1
          size @width
          absolute top left
          background-repeat no-repeat
          background-size contain
          transition all defaultAnimation
        &:hover
          span
            opacity 1
          &::after
            filter brightness(0.7) contrast(0.7)
      for bigButton in bigButtons
        .{bigButton}
          &::after
            background-image url(/icon/bigButton.extension)
