@import 'client/templates/timeline/timeline.import'

.timeline
  .quarter-content
    cursor pointer
    &:hover
      color black
      transition color .3s ease-in-out
  .date-selection
    cursor auto
    height initial
    absolute bottom 48px 0 left -36px
    user-select none
    border 2px solid color2
    border-radius 5px
    background-color color3
    width 360px
    padding 5px
    margin 0
    z-index 5
    .quarter-years
      display flex
      .quarter-selection
        width 90px
        margin 0 5px
        border-right 1px solid color2
        .quarters
          margin-left 10px
          display flex
          flex-direction column
          justify-content center
      .year-selection
        width 270px
        margin-left 3px
    .buttons
      margin 10px 0 5px 25px
      span
        margin-right 5px
        cursor pointer
        border-radius 1.2em
        width 4em
        height 1.2em
        line-height 1.2em
        text-align center
        transition all .3s ease-in-out
        &:hover
          background-color white
          transform scale(1.2)
          transition all .3s ease-in-out
    p
      font-weight bold
      color color1
      cursor default
    // Hide standard radio button
    [type="radio"]:not(:checked), [type="radio"]:checked
      absolute top 0 left -9999px
    [type="radio"]:not(:checked) + label, [type="radio"]:checked + label
      relative
      cursor pointer
      text-align center
      width 50px
    [type="radio"]:checked + label
      cursor default
      border-radius 3px
      background-color color0
      color white
      border-bottom none
      font-weight bold
      transition all .3s ease-in-out
    [type="radio"]:not(:checked) + label
      border-radius 3px
      background-color color3
      color color1
      border-bottom none
      font-weight normal
      transition all .3s ease-in-out
      &:hover
        color black
        background-color color2
        transition all .3s ease-in-out
  // Little arrow triangle
  .date-selection:after, .date-selection:before
    border solid transparent
    content ' '
    height 0
    width 0
    absolute top 100% left 90px
    pointer-events none
  .date-selection:after
    border-color transparent
    border-top-color color3
    //margin-top -1px
    border-width 19px
    margin-left -20px
  .date-selection:before
    border-color transparent
    border-top-color color2
    //margin-top -1px
    margin-left -21px
    border-width 20px
