@import 'client/templates/timeline/timeline.import'

.timeline
  // Make SVG responsive
  .d3-svg-container
    display inline-block
    position relative
    width 100%
    padding-bottom 100%
    vertical-align middle
    overflow hidden
  .d3-svg-content
    display inline-block
    position absolute
    top 0
    left 0
  // Style SVG charts
  path
  	stroke-width 1
  	fill none
  .data1
  	stroke colorA
  .data2
  	stroke colorB
  .axis
    text
      font-size 8px
      fill colorC
    shape-rendering crispEdges
    .x
      line, .minor, path
        stroke colorC
    .y
      line, path
        fill none
        stroke colorC
      .axisRight text
  	    fill colorA
      .axisLeft text
  	    fill colorB
