template(name='nav')
  nav.navbar.navbar-default(role='navigation')
    .container
      .navbar-header
        button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1')
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href='/')
          img(width='150', src='/img/logo_eportfolio.png')
      #bs-example-navbar-collapse-1.colapse.navbar-collapse
        if isAdmin
          ul.nav.navbar-nav
            li.dropdown
              a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-expanded='false')
                | Menu 
                span.caret
              ul.dropdown-menu(role='menu')
                li: a(href='/estate', class="{{activPage 'estate'}}") Estates
                li: a(href='/settings', class="{{activPage 'settings'}}") Settings
                li: a(href='/portfolios') Portfolios
                li: a(href='/buildings') Buildings
                li: a(href='/playground') Playground
                li: a(href='/fluids') Fluids
                li: a(href='/user') Users
                li: a(href='/selectors') Selectors
                li: a(href='/actionsList') ActionsList
                li: a(href='/scenarioForm') ScenarioForm
                li: a(href='/timeline') timeline
          ul.nav.navbar-nav
            li.dropdown
              a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-expanded='false')
                | {{currentEstate}} 
                span.caret
              ul.dropdown-menu(role='menu')
                each estates
                  li: a.select_estate(href='#')= estate_name
        form.navbar-form.navbar-left(role='search')
          .form-group
            input.form-control(type='text', placeholder='Search')
          button.btn.btn-default(type='submit') Submit
        ul.nav.navbar-nav.navbar-right
          li: a: img(src='{{getProfilePicture}}', width='25')
          li: a(href='#')
            +loginButtons
          li.dropdown
            a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-expanded='false')
              | {{lang}} 
              span.caret
            ul.dropdown-menu(role='menu')
              li: a.fr-lang(href='#', class="{{langActiv 'fr'}}") Fran√ßais
              li: a.en-lang(href='#', class="{{langActiv 'en'}}") English
    +SelectEstate
