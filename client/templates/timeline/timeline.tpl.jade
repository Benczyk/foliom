.page.plan: .container
  // Scenario being displayed
  .row: .col-md-12: h1.page-title {{_ 'scenario'}} #{scenarioId}
  .row
    // Timeline
    .col-md-4: .panel.panel-primary
      .panel-heading.timeline.timeline-header.noselect: clearfix
        h3.pull-left.panel-title {{_ 'timeline'}}
        .timeline.timeline-filter.pull-right
          select(data-trigger='timeline-trigger-building-filter')
            option(value='all') {{_ 'all'}}
            each availableBuildings
              option(value=_id)= building_name
      .panel-body.timeline.timeline-year-panel: table.timeline.timeline-year-table
        each timelineActions
          tr(data-value=yearValue)
            td.timeline.timeline-year= yearValue
            td: table.timeline.timeline-quarter-table
              each quarterContent
                tr(data-value=value).timeline.timeline-quarter
                  td: h4.panel-inner-title {{_ 'quarter_abbreviation'}}#{value}
                  td
                    each actions
                      .timeline.timeline-action-items
                        | !{logo}
                        span(data-value=buildingIds.length)= buildingIds.length
    // Appraisal, charts and available actions
    .col-md-8
      // Appraisal
      .row: .col-md-12: .panel.panel-primary
        .panel-heading: h3.panel-title {{_ 'appraisal'}}
        .panel-body
          .row
            // Number of actions
            .col-xs-3.timeline.appraisal-sep
              h4.panel-inner-title {{_ 'nb_actions'}}
              p.timeline.appraisal-value #{nbActions} {{_ 'actions'}}
            // Total costs
            .col-xs-3.timeline.appraisal-sep
              h4.panel-inner-title {{_ 'total_cost'}}
              p.timeline.appraisal-value #{totalCost}
            // Global TRI
            .col-xs-3.timeline.appraisal-sep
              h4.panel-inner-title {{_ 'global_tri'}}
              p.timeline.appraisal-value #{triGlobal}
            // Total costs
            .col-xs-3
              h4.panel-inner-title {{_ 'energy_saving'}}
              p.timeline.appraisal-value #{energySaving}
      // The charts
      .row: .col-md-12: .panel.panel-primary: .panel-body
        // The consumption chart
        .row
          // The chart
          .col-md-8
            #consumption.ct-chart.ct-octave
          // The legend as a simple table
          .col-md-4
            small: .table-responsive: table.table.table-condensed: tbody
              each consumptionLegend
                .timeline.div.chart-legend(class=color)= name
        // The Planning budget chart
        .row
          // The chart
          .col-md-8
            #planning_budget.ct-chart.ct-octave
          // The legend as a simple table
          .col-md-4
            small: .table-responsive: table.table.table-condensed: tbody
              each planningBudgetLegend
                .timeline.div.chart-legend(class=color)= name
      // Action bucket
      .row: .col-md-12: .panel.panel.panel-primary
        .panel-heading.timeline.action-bucket-heading.noselect(data-trigger='timeline-action-bucket-toggle'): clearfix
          h3.panel-title.pull-left {{ _'action_bucket'}}
          .timeline.action-bucket-arrow.pull-right: span.action-bucket-arrow-icon.glyphicon.glyphicon-circle-arrow-up
        if isActionBucketDisplayed
          .panel-body
            p: strong TODO Table of available actions
