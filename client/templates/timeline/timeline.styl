colorPrimary = #A9C700
colorSecondary = #808080

headingHeight = 2.4em
rondFontSize = 22px
roundIconSize = 1.7 * rondFontSize

.timeline
  &.appraisal-value
    color colorPrimary
    font-size 1.4em
    font-weight bolder
    margin-bottom 0
  &.appraisal-sep
    border-right 1px solid colorSecondary
  // The little round shapes used for the charts legends
  &.chart-legend
    width 1em
    height 1em
    border-radius 1em
  // Action bucket
  &.action-bucket-heading
    height headingHeight
  &.action-bucket-arrow
    width 4em
    height headingHeight
    line-height headingHeight
    text-align center
    margin-top -.6em
    margin-right -1em
    color white
    background-color colorSecondary
  &.timeline-action-items
    font-family 'foliom-picto'
    background-color colorPrimary
    color white
    font-size rondFontSize
    width roundIconSize
    border-radius roundIconSize
    line-height roundIconSize
    text-align center
