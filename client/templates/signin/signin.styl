@import 'client/stylesheets/colors.import.styl'

.signin
  width 100%
  height 100%
  color black
  background url('/img/fondhome.jpg') no-repeat center top
  background-size cover

  .logo
    margin-top 3em
    margin-bottom 1em
    width 100%

  .hangs
    font-size 1.5em
    margin-bottom 1em

  input, button
    margin-bottom .5em
    padding-left .5em

  .interrogation
    background colorA
    border-radius 2em
    width 2em
    height 2em
    color white
    margin-right 1em
    text-align center
    line-height 2em
    font-weight bold
    font-size 1.2em

  .what-is
    margin-top .4em

  a, a:hover
    color black

  .my-account, a, a:hover, .interrogation, .hangs
    font-family Comfortaa
