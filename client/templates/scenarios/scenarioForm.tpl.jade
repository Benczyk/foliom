.page.plan: .container
  .row: .col-md-12: h1.page-title {{_ 'create_scenario'}}
  //General form
  .row.scenario_row
    .col-md-8
      form.form-horizontal
        .form-group
          label.col-sm-4.control-label(for="scenario_name") {{_ 'name'}}
          .col-sm-8: input.form-control#scenario_name(type="text" placeholder=name_pl)
        .form-group
          label.col-sm-4.control-label(for="duration") {{_ 'duration'}}
          .col-sm-8: input.form-control#duration(type="number" placeholder=duration_pl)
        .form-group
          label.col-sm-4.control-label(for="total_expenditure") {{_ 'total_expenditure'}}
          .col-sm-8: input.form-control#total_expenditure(type="number" placeholder=total_expenditure_pl)
        .form-group
          label.col-sm-4.control-label(for="roi_less_than") {{_ 'roi_less_than'}}
          .col-sm-8: input.form-control#roi_less_than(type="number" placeholder=duration_pl)
    .col-md-4
      img.img-thumbnail(src="data:image/svg+xml;base64," alt="...")
  //- Criterions
  .row.scenario_row
    #scenarioCriterion {{_ "scenario_criterion"}}
    ul#sortable
      li
        .col-sm-1: span.glyphicon.glyphicon-move(aria-hidden="true")
        .col-sm-6 {{criterionName}}
        .col-sm-4
          .form-inline: .form-group: .input-group
            input.form-control#exampleInputAmount(type="text" placeholder="Amount")
            .input-group-addon {{_ "u_euro_year"}}
        .col-sm-1: span.removeCriterion.glyphicon.glyphicon-trash(aria-hidden="true")
      li
        .col-sm-1: span.glyphicon.glyphicon-move(aria-hidden="true")
        .col-sm-6 {{criterionName}}
        .col-sm-4
          .form-inline: .form-group: .input-group
            input.form-control#exampleInputAmount(type="text" placeholder="Amount")
            .input-group-addon {{_ "u_euro_year"}}
        .col-sm-1: span.removeCriterion.glyphicon.glyphicon-trash(aria-hidden="true")
      li
        .col-sm-1: span.glyphicon.glyphicon-move(aria-hidden="true")
        .col-sm-6 {{criterionName}}
        .col-sm-4
          .form-inline: .form-group: .input-group
            input.form-control#exampleInputAmount(type="text" placeholder="Amount")
            .input-group-addon {{_ "u_euro_year"}}
        .col-sm-1: span.removeCriterion.glyphicon.glyphicon-trash(aria-hidden="true")
      li
        .col-sm-1: span.glyphicon.glyphicon-move(aria-hidden="true")
        .col-sm-6 {{criterionName}}
        .col-sm-4
          .form-inline: .form-group: .input-group
            input.form-control#exampleInputAmount(type="text" placeholder="Amount")
            .input-group-addon {{_ "u_euro_year"}}
        .col-sm-1: span.removeCriterion.glyphicon.glyphicon-trash(aria-hidden="true")
