.page.plan: .container
  .row: .col-md-12: h1.page-title {{_ 'create_scenario'}}
  //General form
  form
    .row.scenario_row
      .col-md-8
        .form-horizontal
          .form-group
            label.col-sm-4.control-label(for="scenario_name") {{_ 'name'}}
            //- .col-sm-8: input.form-control#scenario_name(type="text" placeholder=name_pl value=(sc_data "name"))
            .col-sm-8: input.form-control#scenario_name(type="text" placeholder=name_pl)
          .form-group
            label.col-sm-4.control-label(for="duration") {{_ 'duration'}}
            .col-sm-8: input.form-control#duration(type="number" placeholder=duration_pl)
          .form-group
            label.col-sm-4.control-label(for="total_expenditure") {{_ 'total_expenditure'}}
            .col-sm-8: input.form-control#total_expenditure(type="number" placeholder=total_expenditure_pl)
          .form-group
            label.col-sm-4.control-label(for="roi_less_than") {{_ 'roi_less_than'}}
            .col-sm-8: input.form-control#roi_less_than(type="number" placeholder=duration_pl)
      .col-md-4
        img.img-thumbnail(src="data:image/svg+xml;base64," alt="...")
    //- Criterions
    #scenarioCriterion
      #scenarioCriterionTitle {{_ "scenario_criterion"}}
      ul#sortable
        each getCriterion
          li.criterion
            .row.row-correct
              .col-sm-1: span.glyphicon.glyphicon-move.handlerIcon(aria-hidden="true")
              .col-sm-5: span.criterion-text.criterion-label(true_label=label) {{_ label}}
              .col-sm-5
                .form-inline: .form-group: .input-group
                  if isCheckbox type
                    .row
                      .col-sm-2: input(type="checkbox" value="")
                      .col-sm-10: .criterion-text.criterion-desc {{_ desc}}
                  else if isSelectorTechfield type
                    select#addTechfield.form-control
                      option(value="" disabled selected) {{_ "select_techField"}}
                      each getTechnical_compliance_items
                        option(value=value) {{_ label}}
                  else
                    input.form-control#criterionAmount(type="text" placeholder="Amount")
                    .input-group-addon {{_ unit}}
              .col-sm-1: span.removeCriterion.glyphicon.glyphicon-trash(aria-hidden="true")
        li#addCriterionLi.criterion
            .col-md-3 {{_ 'add_criterion'}}
            .col-md-9
              select#addCriterionSelect.form-control.addCriterion
                option(value="" disabled selected) {{_ "select_criterion"}}
                option Consommation d’énergie en € / an : réduction sur le Bâtiment au moins égale à (en %)
                option 2
                option 3
    input#scenario-submit.btn.btn-primary(type="submit" value="Save & See results")
