@import 'nib'

.home
  .main-menu
    background-repeat no-repeat
    background-size contain
    height 293px
    padding 10px
    opacity 0.7
    transition opacity .3s ease-in-out
    border-radius 2px
    &:hover
      transition opacity .3s ease-in-out
      opacity 1.0
  .all-except-title
    min-height 600px
    margin-bottom 1em
  .sextan
    background-image url(/icon/sextan.png)
  .compass
    background-image url(/icon/compass.png)
  .followup-tools
    margin 1em 0
  .messages
    height 600px
  .chat-panel
    height 500px
  .followup-tools
    .panel-body
      margin 0
      padding 0
      height 223px
    .ct-point
      stroke-width 12px
